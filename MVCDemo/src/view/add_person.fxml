<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>


<GridPane fx:controller="controller.PersonController" alignment="CENTER" hgap="5.0" vgap="5.0" xmlns:fx="http://javafx.com/fxml">
    <children>
        
        <HBox alignment="TOP_RIGHT" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <children>
                <Button text="" fx:id="closeBtn" onAction="#closeForm"/>
            </children>
        </HBox>
        <Label text="Add New Person" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
            <font>
                <Font size="30.0"/>
            </font>
        </Label>
        <Label text="First name" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label text="Last name" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label text="Address" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Label text="Country" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextField fx:id="firstName" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <TextField fx:id="lastName" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <TextField fx:id="email" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <TextField fx:id="address" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <TextField fx:id="country" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        <HBox alignment="TOP_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="7">
            <children>
                <Button mnemonicParsing="true" fx:id="saveBtn" text="_Save" onAction="#savePerson"/>
                <Button mnemonicParsing="true" fx:id="clearBtn" text="_Clear" onAction="#clearPerson"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
</GridPane>